<span class="title">Link Character</span>
<div class="characters">
	{{#if hasCharacters}}
		<table border="0" cellspacing="0" cellpadding="0">
			<thead>
				<tr>
					<th>Name</th><th>Race</th><th>Class</th><th>Level</th>
				</tr>
			</thead>
			<tbody>
				{{#each characters as |char|}}
					<tr {{action "linkCharacter" target char}}>
						<td>{{char.name}}</td>
						<td>{{char.race}}</td>
						<td>{{char.class}}</td>
						<td>{{char.level}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	{{else}}
		loading...
	{{/if}}
	<div class="cancel" {{action "closeDialog"}}>
		Cancel
	</div>	
</div>

