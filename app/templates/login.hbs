<div class="login">
	<div class="user">
		<span class="label {{if badUser "invalid"}}">user</span>
		{{input value=username action="login" on="enter"}}
	</div>
	<div class="password {{if badPwd "invalid"}}">
		<span class="label">password</span>
		{{input type="password" value=password action="login" on="enter"}}
	</div>
	<div class="actions">
		<div class="login" {{action "login"}}>
  		Log in
		</div>
		<div class="or">
			or
		</div>
		{{#link-to "register"}}register{{/link-to}}
	</div>	
</div>
