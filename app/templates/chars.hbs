<div class="home">
	<div class="characters">
		{{#ember-wormhole to="buttons"}}
			<span class="title">Characters</span>
		{{/ember-wormhole}}
		<table>
			<thead>
				<tr>
					<th>Name</th><th>Race</th><th>Class</th><th>Level</th>
				</tr>
			</thead>
			<tbody>
				{{#each char in model}}
					<tr {{action "openCharacter" char}}>
							<td>{{char.name}}</td>
							<td>{{char.race}}</td>
							<td>{{char.class}}</td>
							<td>{{char.level}}</td>
					</tr>
				{{/each}}
			</tbody>
		</table>
	</div>
	<div class="new-char" {{action "newCharacter"}}>
		New Character
	</div>
</div>
