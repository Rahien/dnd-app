<div class="home">
	<div class="characters">
		{{#ember-wormhole to="buttons"}}
			<span class="title">Characters</span>
		{{/ember-wormhole}}
		{{#if hasCharacters}}
			<table border="0" cellspacing="0" cellpadding="0">
				<thead>
					<tr>
						<th>Name</th><th>Race</th><th>Class</th><th>Level</th>
					</tr>
				</thead>
				<tbody>
					{{#each characters as |char|}}
						<tr {{action "openCharacter" char}}>
							<td>{{char.name}}</td>
							<td>{{char.race}}</td>
							<td>{{char.className}}</td>
							<td>{{char.level}}</td>
						</tr>
					{{/each}}
				</tbody>
			</table>
		{{else}}
			<div class="emptymessage">
				No characters yet!
			</div>
		{{/if}}
	</div>
	<div class="tbutton" {{action "newCharacter"}}>
		New Character
	</div>
</div>
