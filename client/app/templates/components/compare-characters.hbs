<table border="0" cellspacing="0" cellpadding="0" class="comparison">
	<thead>
		<tr>
			<th>
				<span class="round-button" title="compare new property" {{action "requestProperty"}}>
					<i class="fa fa-plus"></i>
				</span>				
			</th>
			{{#each sortedCharacters as |char|}}
				<th>
					<span>{{char.name}}</span>
					<span class="round-button" title="remove from adventure" {{action "unlinkCharacter" char}}>
						<i class="fa fa-user-times"></i>
					</span>
					<span class="round-button" title="refresh character" {{action "refreshCharacter" char}}>
						<i class="fa fa-refresh"></i>
					</span>
				</th>
			{{/each}}
		</tr>
	</thead>
	<tbody>
		{{#each sortedProperties as |prop|}}
			<tr>
				<td>
					<span class="tagname {{if prop.selected 'selected'}}" {{action "sortOn" prop}}>{{prop.name}}</span>
					<span class="round-button" title="remove from comparison" {{action "removeProperty" prop}}>
						<i class="fa fa-times" ></i>
					</span>
				</td>
				{{#each sortedCharacters as |char|}}
					<td class="value">{{input value=(mut (get char prop.value))}}</td>
				{{/each}}
			</tr>
		{{/each}}
	</tbody>
</table>
{{#if showModal}}
	{{#modal-dialog}}
		{{select-property properties=availableProperties closeDialog="closeDialog" addProperty="addProperty"}}
	{{/modal-dialog}}
{{/if}}
